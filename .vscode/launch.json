      "cwd": "${workspaceFolder}/build/test",
      "environment": [
        {
          "name": "MALLOC_CHECK_",
          "value": "2"
        }
      ],
      "externalConsole": false,
      "MIMode": "lldb",
      "preLaunchTask": "C/C++: clang++ build active file"
    }
  ]
}