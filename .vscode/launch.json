{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++: clang++ build and debug active file",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/test/manifold_test",
      "args": [
        "--gtest_break_on_failure",
        "--gtest_filter=Manifold.NonConvexNonConvexMinkowski"
